---
import Layout from "../../layouts/Layout.astro";

import { getSlides, type Slide } from "../../utils/serverUtils";
import ContentSlide from "../../components/ContentSlide.astro";
import KeyboardNavigation from "../../components/KeyboardNavigation.astro";

export async function getStaticPaths() {
    return getSlides();
}

type Props = Slide["props"];
---

<Layout>
    <ContentSlide {...Astro.props} />
    <KeyboardNavigation slidePaths={Astro.props.slidePaths} />
</Layout>
